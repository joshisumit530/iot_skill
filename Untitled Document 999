#include <Wire.h>
#include <Servo.h>
#include "Adafruit_TCS34725.h"

// ===== COLOR SENSOR =====
Adafruit_TCS34725 tcs = Adafruit_TCS34725(
  TCS34725_INTEGRATIONTIME_50MS,
  TCS34725_GAIN_4X
);

// ===== MOTOR PINS =====
int IN1 = 2;
int IN2 = 3;
int IN3 = 4;
int IN4 = 5;
int ENA = 6;
int ENB = 7;

// ===== ULTRASONIC PINS =====
int trigC = 8,  echoC = 9;   // Center
int trigL = 10, echoL = 11;  // Left
int trigR = 12, echoR = 13;  // Right

// ===== GRIPPER SERVO =====
Servo gripper;
int gripPin = 22;   // you can change this

int gripOpenPos  = 20;   // adjust
int gripClosePos = 90;   // adjust

// ---------- FUNCTIONS ----------
long distanceCM(int trig, int echo) {
  digitalWrite(trig, LOW);
  delayMicroseconds(2);
  digitalWrite(trig, HIGH);
  delayMicroseconds(10);
  digitalWrite(trig, LOW);
  return pulseIn(echo, HIGH) * 0.034 / 2;
}

// ===== MOTOR CONTROL =====
void forward() {
  digitalWrite(IN1, HIGH);
  digitalWrite(IN2, LOW);
  digitalWrite(IN3, HIGH);
  digitalWrite(IN4, LOW);
  analogWrite(ENA, 160);
  analogWrite(ENB, 160);
}

void stopCar() {
  analogWrite(ENA, 0);
  analogWrite(ENB, 0);
}

void turnRight() {
  digitalWrite(IN1, HIGH);
  digitalWrite(IN2, LOW);
  digitalWrite(IN3, LOW);
  digitalWrite(IN4, HIGH);
  analogWrite(ENA, 150);
  analogWrite(ENB, 150);
}

void turnLeft() {
  digitalWrite(IN1, LOW);
  digitalWrite(IN2, HIGH);
  digitalWrite(IN3, HIGH);
  digitalWrite(IN4, LOW);
  analogWrite(ENA, 150);
  analogWrite(ENB, 150);
}

// ===== COLOR DETECTION =====
String readColor() {
  uint16_t r, g, b, c;
  tcs.getRawData(&r, &g, &b, &c);

  if (r > g && r > b) return "RED";
  if (g > r && g > b) return "GREEN";
  if (b > r && b > g) return "BLUE";
  return "UNKNOWN";
}

// ==================================
void setup() {
  Serial.begin(9600);

  // motors
  pinMode(IN1, OUTPUT);
  pinMode(IN2, OUTPUT);
  pinMode(IN3, OUTPUT);
  pinMode(IN4, OUTPUT);
  pinMode(ENA, OUTPUT);
  pinMode(ENB, OUTPUT);

  // ultrasonic
  pinMode(trigC, OUTPUT); pinMode(echoC, INPUT);
  pinMode(trigL, OUTPUT); pinMode(echoL, INPUT);
  pinMode(trigR, OUTPUT); pinMode(echoR, INPUT);

  // color sensor
  if (!tcs.begin()) {
    Serial.println("Color Sensor NOT found!");
    while (1);
  }

  // gripper servo
  gripper.attach(gripPin);
  gripper.write(gripOpenPos);  // start open

  Serial.println("AUTO CAR + MANUAL GRIPPER READY");
}

// ==================================
void loop() {

  // ===== MANUAL GRIPPER CONTROL =====
  if (Serial.available()) {
    char cmd = Serial.read();

    if (cmd == 'G') {
      Serial.println("Gripper OPEN");
      gripper.write(gripOpenPos);
    }

    if (cmd == 'H') {
      Serial.println("Gripper CLOSE");
      gripper.write(gripClosePos);
    }
  }

  // ===== AUTO DRIVING =====
  long DC = distanceCM(trigC, echoC);
  long DL = distanceCM(trigL, echoL);
  long DR = distanceCM(trigR, echoR);

  if (DC > 15) {
    forward();
    return;
  }

  // object found
  stopCar();
  delay(300);

  String c = readColor();
  Serial.print("COLOR: ");
  Serial.println(c);

  // Color correct?
  if (c == "RED" || c == "GREEN" || c == "BLUE") {
    Serial.println("Correct ball! YOU can close gripper now (press H)");
  }

  // If wrong color → avoid
  else {
    Serial.println("Wrong color → Avoiding...");
  }

  // Try right first
  if (DR > 15) {
    turnRight();
    delay(500);
  }
  else if (DL > 15) {
    turnLeft();
    delay(500);
  }
  else {
    Serial.println("NO PATH");
    stopCar();
  }

  forward();
  delay(200);
}

